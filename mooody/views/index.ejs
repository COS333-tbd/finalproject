<html>
<head>
    <meta charset="utf-8">
    <title>mooody</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/twemoji-awesome.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.2/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <link rel="stylesheet" href="http://cdn.jsdelivr.net/chartist.js/latest/chartist.min.css">
    <script src="http://cdn.jsdelivr.net/chartist.js/latest/chartist.min.js"></script>

</head>

<!--****************************************************-->

<body ng-app="mooody">

<!-- Navbar -->
    <nav class="navbar navbar-default navbar-fixed-top" ng-controller="NavCtrl">
    <!--<nav class="navbar navbar-default pull-right">-->
          <a class="navbar-brand" href="#">m<i class="twa twa-smile"></i><i class="twa twa-cry"></i><i class="twa twa-triumph"></i>dy</a>
          <ul class="nav navbar-nav">
                <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
                <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
                <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
                <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
          </ul>
    </nav>

<!-- Display the rest of the page -->
    <div class="row">
        <div class="col-md-6 col-md-offset-0">
            <ui-view></ui-view>
        </div>
    </div>

<!-- Side bar -->
    <div class="sidebar" ng-controller="SidebarCtrl">
        <center>
            <div ng-show="isLoggedIn()">
                <h3>Hi, {{currentUser()}}!</h3>
                <h3>Current mood: {{currentMood[0].mood}}</h3>
                <div class="ct-chart  ct-perfect-fourth"></div>
                <!--- ^ graph! --->
            </div>
            <h3>Princeton's Mood:</h3>
            <!-- Example of how to use social mood data from back-end -->
            {{"H: " + currentSocialMood[0].happy}} {{"S: " + currentSocialMood[0].sad}} {{"A: " + currentSocialMood[0].angry}}
            <div ng-show="isLoggedIn()">
                <h4>Update your mood:</h4>
                <button ng-click="setMoodTo('happy')"><i class="twa twa-smile"></i></button>
                <button ng-click="setMoodTo('sad')"><i class="twa twa-cry"></i></button>
                <button ng-click="setMoodTo('angry')"><i class="twa twa-triumph"></i></button>
            </div>
        </center>
    </div>

<!-- home.html -->
    <script type="text/ng-template" id="/home.html">

    <!-- Section to add a new post -->
    <form ng-hide="!isLoggedIn()" ng-submit="addPost()" style="margin-top:30px;">
        <div class="form-inline">
            <div class="form-group">
                <input type="text"
                class="form-control"
                ng-attr-placeholder="{{placeholder}}"
                ng-model="title" id="form-title"></input>
                <input type="text"
                class="form-control"
                placeholder="If you need to elaborate...(optional)"
                ng-model="body" id="form-body"></input>
                <button ng-disabled="!isInFilter()" type="submit" class="btn btn-primary">Post</button>
            </div>
        </div>
    </form>
    <div ng-hide="isLoggedIn()">
	  <h4>Please <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> to post.</h4><br>
	</div>

    <!-- Mood tabs and filters -->
    <div class="order-panels">
        <ul>
            <input id="order-toggle" ng-click="toggle()" type="checkbox" checked data-toggle="toggle" data-onstyle="warning" data-offstyle="danger" data-on="RECENT" data-off="HOT">
            <!--<li><button ng-click="tab('new')" class="btn btn-success">RECENT</button></li>-->
            <!--<li><button ng-click="tab('hot')" class="btn btn-danger">HOT</button></li>-->
        </ul>
    </div>
    <div class="mood-panels">
        <ul class="nav nav-tabs nav-justified">
            <li ng-click="tab('all')">ALL POSTS</li>
            <li ng-click="tab('happy')" class="active"><i class="twa twa-smile"></i></li>
            <li ng-click="tab('sad')"><i class="twa twa-cry"></i></li>
            <li ng-click="tab('angry')"><i class="twa twa-triumph"></i></li>
        </ul>
    </div>

    <!-- Display posts -->
    <div class="postfeed" ng-repeat="post in posts | filter: filters | orderBy: orders"> <!-- can also order by '-flags', '-upvotes' -->
        <div><br>
            <span style="font-size:20px; margin-left:10px;">
                {{post.title}}
            </span><br><br>
            <span style="font-size:15px; margin-left:10px;">
                {{post.body}}
            </span><br><br>
        </div>
            <span>
                <ul>
                    <li>{{post.date | date:'MMM dd hh:mm a'}}</li>
                    <li><span class="glyphicon glyphicon-heart" ng-click="incrementUpvotes(post)"></span>
                    {{post.upvotes}}</li>
                    <li><span class="glyphicon glyphicon-flag" ng-click="incrementFlags(post)"></span>
                    {{post.flags}}</li>
                    <li><a href="#/posts/{{post._id}}"><span class="glyphicon glyphicon-comment"></span></a>
                        ({{post.comments.length}})</li>
                </ul>
            </span>
      </div>
    </script>

<!-- posts.html -->
    <script type="text/ng-template" id="/posts.html">

        <!-- Header -->
        <div>
            <a href="#">
                <h2><span class="glyphicon glyphicon-circle-arrow-left"></span> Back</h2>
            </a>
            <h2>{{post.title}}</h2>
            <h3>{{post.body}}</h3>
        </div>

        <!-- Display comments -->
        <div ng-repeat="comment in post.comments | orderBy:'-date'">
            <span class="glyphicon glyphicon-heart" ng-click="incrementUpvotes(comment)"></span>
            {{comment.upvotes}}
            <span class="glyphicon glyphicon-flag" ng-click="incrementFlags(comment)"></span>
            {{comment.flags}}
            <span style="font-size:20px; margin-left:10px;">
                {{comment.body}}
            </span><br><br>
        </div>

        <!-- Section to add a new comment -->
        <form ng-hide="!isLoggedIn()" ng-submit="addComment()" style="margin-top:30px;">
            <div class="form-inline" class="form-group">
                <input type="text"
                class="form-control"
                placeholder="Add a new comment"
                ng-model="body"></input>
                <button type="submit" class="btn btn-primary">Post</button>
            </div>
        </form>
        <div ng-hide="isLoggedIn()">
	       <h4>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h4>
	    </div>
    </script>

<!-- register.html -->
    <script type="text/ng-template" id="/register.html">

        <!-- Error message -->
        <div ng-show="error" class="alert alert-danger row">
    	    <span>{{ error.message }}</span>
        </div>

        <!-- Registration form -->
        <form ng-submit="register()" style="margin-top:30px;">
    	    <h3>Register</h3>
            <div class="form-group">
                <input type="text"
                class="form-control"
                placeholder="Username"
                ng-model="user.username"></input>
            </div>
            <div class="form-group">
                <input type="password"
                class="form-control"
                placeholder="Password"
                ng-model="user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </script>

<!-- login.html -->
    <script type="text/ng-template" id="/login.html">

        <!-- Error message -->
        <div ng-show="error" class="alert alert-danger row">
            <span>{{ error.message }}</span>
        </div>

        <!-- Login form -->
        <form ng-submit="logIn()" style="margin-top:30px;">
            <h3>Log In</h3>
            <div class="form-group">
                <input type="text"
                class="form-control"
                placeholder="Username"
                ng-model="user.username"></input>
            </div>
            <div class="form-group">
                <input type="password"
                class="form-control"
                placeholder="Password"
                ng-model="user.password"></input>
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
        </form>
    </script>

</body>
</html>

